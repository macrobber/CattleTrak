<resources>

    <!--

    Theme.Light : Android 3.0
    Theme.Holo.Light : introduced in Android API 11
    Theme.Holo.Light.DarkActionBar introduced in API 15
    -->

    <!-- Base application theme. -->
    <!--
        <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/darkGreen</item>
        <item name="android:actionBarStyle">@style/MyActionBarTheme</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <style name="YellowTextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">#f29e07</item>
    </style>

    <style name="btnTest">

        <item name="android:textColor">@color/offBlack</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="MyActionBarTheme" parent="Widget.AppCompat.ActionBar.Solid">

        <item name="android:background">@color/darkGreen</item>

    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>



</resources>
